<mvc:View
    height="100%"
    controllerName="sapui5.com.employeemgmt.controller.CreateEmployee"
    xmlns:core="sap.ui.core" 
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m" 
>
    <NavContainer id="idNavContainer">
        <pages>
            <Page
                id="wizardContentPageId1"
                showHeader="true"
                title="Crear empleado"
            >
                <content>
                    <core:Fragment
                        fragmentName="sapui5.com.employeemgmt.fragment.WizardCreate"
                        type="XML"
                    />
                </content>
            </Page>
            <Page
                id="wizardContentPageId2"
                showHeader="true"
                title="{i18n>resume}"
                showSubHeader="true"
            >
                <content>
                    <core:Fragment
                        fragmentName="sapui5.com.employeemgmt.fragment.WizardSummary"
                        type="XML"
                    />
                </content>
                <footer>
                    <Bar id="idBar">
                        <contentRight>
                            <core:Fragment
                                fragmentName="sapui5.com.employeemgmt.fragment.WizardFooter"
                                type="XML"
                            />
                        </contentRight>
                    </Bar>
                </footer>
            </Page>
        </pages>
    </NavContainer>
</mvc:View>
