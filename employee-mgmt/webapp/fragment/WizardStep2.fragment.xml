<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <WizardStep
        id="idWizardStep2"
        validated="false"
        title="{i18n>employeeInfo}"
        activate="additionalInfoValidation"
    >
        <MessageStrip
            id="messageStrip2"
            class="sapUiSmallMarginBottom"
            text="{i18n>messageStrip2}"
            showIcon="true"
        />
        <form:SimpleForm
            id="employeeInfo"
            editable="true"
        >
            <Label
                id="firstNameLabel"
                text="{i18n>firstName}"
                required="true"
            />
            <Input
                id="firstNameInput"
                valueState="{DataEmployeeStates>/firstNameState}"
                liveChange="onFirstNameChange"
                value="{DataEmployee>/firstName}"
                required="true"
            />
            <Label
                id="lastNameLabel"
                text="{i18n>lastName}"
                required="true"
            />
            <Input
                id="lastNameInput"
                valueState="{DataEmployeeStates>/lastNameState}"
                liveChange="onLastNameChange"
                value="{DataEmployee>/lastName}"
                required="true"
            />
            <Label
                id="dniLabel"
                text="{i18n>dni}"
                required="true"
                labelFor="dniInput"
                visible="{= ${DataEmployee>/type} !== '1'  ? true : false}"
            />
            <Input
                id="dniInput"
                valueState="{DataEmployeeStates>/documentState}"
                liveChange=".onDNIChange"
                value="{DataEmployee>/documentId}"
                visible="{= ${DataEmployee>/type} !== '1' ? true : false}"
                required="true"
            />
            <Label
                id="cifLabel"
                text="{i18n>cif}"
                required="true"
                labelFor="cifInput"
                visible="{= ${DataEmployee>/type} === '1'  ? true : false}"
            />
            <Input
                id="cifInput"
                valueState="{DataEmployeeStates>/documentState}"
                liveChange=".onCIFChange"
                value="{DataEmployee>/documentId}"
                visible="{= ${DataEmployee>/type} === '1' ? true : false}"
                required="true"
            />
            <Label
                id="salaryId1"
                text="{= ${DataEmployee>/type} === '2' ? ${i18n>annualSalary} : ${i18n>dailySalary}}"
                required="true"
            />
            <Slider
                id="salarySlider"
                min="{DataEmployee>/minSalary}"
                max="{DataEmployee>/maxSalary}"
                value="{DataEmployee>/salary}"
                showAdvancedTooltip="true"
                inputsAsTooltips="true"
                enableTickmarks="true"
                class="sapUiMediumMarginBottom"
                width="100%"
            />
            <Label
                id="creationDateLabel"
                text="{i18n>creationDate}"
                required="true"
                labelFor="startDateInput"
            />
            <DatePicker
                id="creationDateInput"
                value="{path:'DataEmployee>/creationDate', type:'sap.ui.model.odata.type.Date'}"
                showCurrentDateButton="true"
                change=".onCreationDateChange"
                class="sapUiSmallMarginBottom"
                required="true"
            />
        </form:SimpleForm>
    </WizardStep>
</core:FragmentDefinition>
