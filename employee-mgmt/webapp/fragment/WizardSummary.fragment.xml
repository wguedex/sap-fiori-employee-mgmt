<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <form:SimpleForm
        id="typeForm1"
        title="1. {i18n>employeeType}"
        layout="ResponsiveGridLayout"
    >
        <form:content>
            <Label
                id="typeId"
                text="{i18n>employeeType}"
            />
            <Text
                id="employeeTypeChosenId"
                text="{DataEmployee>/descriptionType}"
            />
            <Link
                id="editStepOneId"
                press="editStep1"
                text="Edit"
            />
        </form:content>
    </form:SimpleForm>
    <form:SimpleForm
        id="dataEmployeeForm1"
        title="1. {i18n>employeeInfo}"
        layout="ResponsiveGridLayout"
    >
        <form:content>
            <Label
                id="firstNameLabel2"
                text="{i18n>firstName}"
            />
            <Text
                id="firstNameInput2"
                text="{DataEmployee>/firstName}"
            />
            <Label
                id="lastNameLabel2"
                text="{i18n>lastName}"
            />
            <Text
                id="lastNameInput2"
                text="{DataEmployee>/lastName}"
            />
            <Label
                id="documentIDlabel"
                text="{= ${DataEmployee>/type} !== '1'  ? ${i18n>dni} : ${i18n>cif}}"
            />
            <Text
                id="documentIDinput"
                text="{DataEmployee>/documentId}"
            />
            <Label
                id="salarylabel2"
                text="{= ${DataEmployee>/type} === '2' ? ${i18n>annualSalary} : ${i18n>dailySalary}}"
            />
            <Text
                id="salaryText"
                text="{DataEmployee>/salary}"
            />
            <Label
                id="creationDatelabel2"
                text="{i18n>creationDate}"
            />
            <Text
                id="creationDateText"
                text="{path:'DataEmployee>/creationDate', type:'sap.ui.model.odata.type.Date'}"
            />
            <Link
                id="editStepTwoId"
                press="editStep2"
                text="Edit"
            />
        </form:content>
    </form:SimpleForm>
    <form:SimpleForm
        id="typeForm3"
        title="3. {i18n>OptionalInfo}"
        layout="ResponsiveGridLayout"
    >
        <form:content>
            <Label
                id="commentLabel2"
                text="{i18n>comment}"
            />
            <TextArea
                id="textAreaInput2"
                value="{DataEmployee>/comment}"
                width="100%"
                height="100px"
                editable="false"
            />
            <Label
                id="idlabel"
                text=""
            />
            <List
                id="idList"
                width="auto"
                items="{DataEmployee>/files}"
            >
                <items>
                    <StandardListItem
                        id="idStandardListItem"
                        title="{DataEmployee>fileName}"
                    />
                </items>
            </List>
            <Link
                id="editStepThreeId"
                press="editStep3"
                text="Edit"
            />
        </form:content>
    </form:SimpleForm>
</core:FragmentDefinition>
